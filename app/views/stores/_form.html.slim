= simple_nested_form_for(store, :html => { :class => "form-horizontal" }) do |form|

  == form_error_messages(store)

  - logo = store.logo
  - if logo.present?
    = link_to image_tag(logo.url(:thumb)), logo.url
  = form.input :logo, as: :file
  = form.input :name
  = form.input :address
  = form.input :description
  = form.input :short_description
  = form.input :currency, collection: ["$", "â‚¬"]

  = form.fields_for :pictures do |picture_form|
    - picture = picture_form.object.image
    - if picture.present?
      = link_to image_tag(picture.url(:thumb)), picture.url
    = picture_form.input :image, as: :file
    = picture_form.link_to_remove "Remove this picture"

  p= form.link_to_add "Add a picture", :pictures

  = form.fields_for :opening_times do |time_form|
    = time_form.input :weekday, collection: OpeningTime.weekdays_hash
    = time_form.input :start_time, minute_step: 15
    = time_form.input :end_time, minute_step: 15
    = time_form.link_to_remove "Remove this scheduled time"

  p= form.link_to_add "Add a scheduled time", :opening_times

  = form.fields_for :products do |product_form|
    = product_form.association :product_taxonomy
    = product_form.input :name
    = product_form.input :description
    = product_form.input :price
    = product_form.link_to_remove "Remove this product"

  p= form.link_to_add "Add a product", :products

  = form.button :submit, :class => "btn btn-primary"
